{{#if error}}
    <div class="alert alert-danger alert-dismissible fade show animate__animated animate__fadeInUp" role="alert">
        {{error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show animate__animated animate__fadeInUp" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}
